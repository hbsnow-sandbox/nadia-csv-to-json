{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "app",
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "baseUrl": "./app",
        "paths": {
            "*": ["@types/*"]
        },
        "lib": [
            "es2018",
            "dom"
        ],
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "app/**/*"
    ],
    "exclude": [
      ".git",
      "node_modules"
    ]
  }